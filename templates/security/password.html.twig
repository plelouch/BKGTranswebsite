{% extends 'base.html.twig' %}

{% block title %}Modification du mots de passe utilisateur {% endblock %}

{% block body %}
    <div class="page-title sp" style="background-image: url({{ asset('assets/img/page-title.jpg') }})">
        <div class="container text-center">
            <h2>Modification du mots de passe</h2>
        </div>
    </div>
    <div class="contact-area sp">
        <div class="container">
            <div class="row">
                <div class="col-sm-2"></div>
                <div class="col-sm-8 ">
                    <div class="contact-info">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button class="button"><i class="fa fa-check"></i> Modifiez le mots de passe</button>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="col-sm-2"></div>
            </div>

        </div>
    </div>
{% endblock %}