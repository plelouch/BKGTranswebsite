{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="page-title sp" style="background-image: url(assets/img/page-title.jpg)">
        <div class="container text-center">
            <h2>Se connecter</h2>
        </div>
    </div>
    <div class="contact-area sp">
        <div class="container">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    <form method="post" class="contact-form">
                        <h2 class="text-center" style="margin-bottom: 1.5em;">Connexion</h2>
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" name="_username" id="username" value="{{ last_username }}" placeholder="Nom d'utilisateur">
                        </div>
                        <div class="form-group">
                            <label for="password">Mots de passe</label>
                            <input type="password" name="_password" id="password" placeholder="Mots de passe">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group text-center">
                            <button class="button" type="submit">Connexion</button>
                            <br><br>
                            <a class="forgot" href="#">Forgot your email or password?</a>
                        </div>
                    </form>
                </div>
                <div class="col-sm-3"></div>
            </div>

        </div>
    </div>
{% endblock %}