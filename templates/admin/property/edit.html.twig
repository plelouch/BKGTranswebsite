{% extends 'admin/base.html.twig' %}

{% block title %}Mofication info de la propriété {{ property.title }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Gestion des propriété</a>
            </li>
            <li class="breadcrumb-item active">Modifier info propriété</li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-edit"></i>
                Mofication info de la  propriété {{ property.title }}
            </div>
            <div class="card-body">
                {{ include('admin/property/_form.html.twig', {'button_label': 'Modifier'}) }}
            </div>
        </div>
        <a class="btn btn-link" href="{{ path('admin_property_index') }}">
            <i class="fas fa-arrow-circle-left"></i>
            Retour à la liste
        </a>
    </div>
{% endblock %}
