{% extends 'admin/base.html.twig' %}

{% block title %}Liste des contrats de Location {% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Liste des locations</a>
            </li>
            <li class="breadcrumb-item active"></li>
        </ol>

        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Formaliter de location
                <a class="btn btn-info btn-sm" href="{{ path('location_new') }}">
                    Location
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>NÂ°</th>
                                <th>Date de Location</th>
                                <th>Date et Heure de Depart</th>
                                <th>Date et Heure d'ArriveAt</th>
                                <th>Prix de location</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for location in locations %}
                            {% set isValid = location.isReturn %}
                            <tr>
                                <td>{{ location.id }}</td>
                                <td>{{ location.dateLocation ? location.dateLocation|date('Y-m-d') : '' }}</td>
                                <td>{{ location.departAt ? location.departAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ location.ArriveAt ? location.ArriveAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ location.price }}</td>
                                <td>
                                    <a style="{% if isValid == true %} display:none;{% endif %}" class="btn btn-warning btn-sm" href="{{ path('location_edit', {'id': location.id}) }}">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a style="{% if isValid == true %} display:none;{% endif %}" class="btn btn-success btn-sm" href="{{ path('location_return', {'id': location.id}) }}">
                                        <i class="fas fa-check"></i>
                                    </a>
                                    {{ include('location/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
{% endblock %}
