<form method="post" style="display: inline" action="{{ path('admin_sell_delete', {'id': sell.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sell.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="fas fa-trash"></i>
    </button>
</form>
